<%= link_to 'Create Course', new_course_path, class: 'btn btn-lg project_view1 modal_buttons border border-3 border-dark project-modal' %>

<div class="container position-relative project-listing">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-sm-3">

        <div class="card">

          <div class="image-container ">
            <img src="https://content.reelapps.io/static/media/LOGO.c4ba0a75af69c59a6576.png" width="100%" height="100%" class="img-fluid rounded thumbnail-image background-radial-gradient">
          </div>

          <div class="product-details">
            <%= course.title %>
            <br/>
            <%= link_to "Edit", course_path(course), class: 'btn btn-dark' %>
            <%= link_to "Delete", course, data: { turbo_method: :delete, turbo_confirm: :"Are you sure" }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>