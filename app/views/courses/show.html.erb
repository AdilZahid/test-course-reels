<%# if (@course.reels.count == 0) %>
<%= render partial: 'reels/form', locals: { reel: @project.reels.new } %>

<%# else %>
<div class="wrapper mt-5">

  <div class="container">

    <div class="row g-1">

      <div class="col-md-3">

        <div class="card p-3">

          <div class="text-center">

            <h1 class="content-reel">Content Reel</h1>

          </div>

          <div class="product-details">
            <%= @course.name %>
            <br/>
            <%#= link_to "Edit", reel_path(project_id: @project.id), class: 'btn btn-dark' %>
            <%#= link_to "Delete", @project, data: { turbo_method: :delete }, class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<%# end %>