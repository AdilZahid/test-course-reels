<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @course, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
        </div>
        <div class="form-group">
          <%= form.label :script %>
          <%= form.text_area :script, class: "form-control", placeholder: "Enter script" %>
        </div>
        <div>
        <%= form.submit "Create", class: "btn btn-primary" %>
      </div>
        <% end %>
    </div>
  </div>
</div>
