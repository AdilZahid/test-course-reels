<%= form_for(course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this Reel from being saved:</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-body bg-dark">
    <div class="row">
      <div class="form-holder">
        <div class="form-content">
          <div class="form-items">
            <h3>Create New Course</h3>
            <p>Fill in the data below.</p>

            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
            </div>
            <div class="form-group">
              <%= form.label :script %>
              <%= form.text_area :script, class: "form-control", placeholder: "Enter script" %>
            </div>
            <div>
              <%= form.submit "Create", class: "btn btn-sm modal_buttons text-light border" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>